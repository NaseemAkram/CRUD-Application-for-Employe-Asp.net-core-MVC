@model IEnumerable<CRUD_Application_Asp.net_core_MVC.Models.Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="col-8">
        <h1 class="text-center text-success m-1">Employee Records</h1>
        <p class="text-center text-success">@TempData["error"]</p>
        <a class="btn btn-sm btn-primary" asp-action="Create" asp-controller="Employee">Create</a>
        <table class="table table-bordered">
            <tr class="text-center">
                <th>EmployeeId</th>
                <th>Name</th>
                <th>City</th>
                <th>State</th>
                <th>Salary</th>
                <th>Action</th>

            </tr>
            @foreach(var e in Model)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Name</td>
                    <td>@e.City</td>
                    <td>@e.State</td>
                    <td>@e.Salary</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-controller="Employee" asp-action="Edit" asp-route-id="@e.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@e.Id">Delete</a>
                    </td>

                </tr>
            }
        </table>
    </div>
</div>

