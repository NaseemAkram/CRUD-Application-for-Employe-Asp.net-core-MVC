@model CRUD_Application_Asp.net_core_MVC.Models.ViewModel.ImageCreateModel
@{
    ViewData["Title"] = "UploadImage";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" asp-action="UploadImage" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                <label asp-for="ImagePath"></label>
                <input type="file" asp-for="ImagePath" class="form-control"  />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-sm btn-primary float-end" value="Save" />
        </div>
            </form>
        </div>
    </div>
</div>

